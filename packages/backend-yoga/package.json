{
  "name": "@lunarcrush/backend-yoga",
  "version": "1.0.0",
  "description": "LunarCrush GraphQL Yoga Backend with Cloudflare Workers",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "codegen": "node ../../scripts/generate-backend-schema.js",
    "codegen:full": "../../scripts/codegen-workflow.sh full",
    "prebuild": "npm run codegen"
  },
  "dependencies": {
    "@envelop/core": "^5.3.0",
    "@envelop/live-query": "^9.0.0",
    "@google/generative-ai": "^0.24.1",
    "graphql": "^16.11.0",
    "graphql-yoga": "^5.10.4",
    "hono": "^4.8.9",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250722.0",
    "@types/node": "^24.1.0",
    "typescript": "^5.8.3",
    "wrangler": "^4.25.1"
  },
  "packageManager": "yarn@4.0.0"
}
